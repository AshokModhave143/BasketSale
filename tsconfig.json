{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "types": ["node", "jest"],
        "typeRoots": ["node_modules/@types"],
        "skipLibCheck": true
    },
    "exclude": [
        "__tests__/**/*-test.tsx?",
        "./node_modules",
        "./node_modules/@types/node/index.d.ts",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "include": ["src/**/*"]
}
